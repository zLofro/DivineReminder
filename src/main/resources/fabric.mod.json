{
  "schemaVersion": 1,
  "id": "divinereminder",
  "version": "${version}",

  "name": "DivineReminder",
  "description": "Fabric 1.18.2 Minecraft client-side mod that puts a flashing image of Jesus Christ on the screen with bell sounds when a player has low health.",
  "authors": [
    "Lofro"
  ],
  "contact": {
    "sources": "https://github.com/zLofro/LowHealthJesusScreamer"
  },

  "license": "MIT",
  "icon": "assets/divinereminder/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "me.lofro.divineReminder.client.ModClient"
    ]
  },
  "mixins": [
    "jesusscreamer.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
